generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model produto {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(200)
  price    Int
  quantity Int
  photo    String @db.Text
}

model user {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(200)
  email  String  @unique(map: "unique-email") @db.VarChar(200)
  avatar String? @db.Text
}
